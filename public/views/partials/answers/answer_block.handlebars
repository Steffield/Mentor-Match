{{!-- Page to display all answers attached to a particular question --}}
<article class="media">
    <figure class="media-left">
        <p class="image is-48x48">
        <svg width="48" height="48" data-jdenticon-value = {{ answerUsername }}></svg>
        </p>
    </figure>
    <div class="media-content">
        <div class="content">
        <p> 
            {{!-- Displaying answer contents --}}
            <em><span class="userUsername" data-user={{answerUserId}}><a>{{answerUsername}}</a></span></em> | {{formatDate rawTime}}
            <br><span class="postedText"> {{{answerText}}} </span>
        </p>
        </div>
    </div>
</article>