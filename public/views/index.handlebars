<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Mentor Match | Q & A
      </h1>
      <h2 class="subtitle">
        Beginner Web Developers Asking Questions in a Friendly Environment
      </h2>
      <h2>Welcome <span class="member-name">Guest</span></h2>
    </div>
  </div>
</section>

<div class="container">

  <div id="askQuestion" class="askQuestion hide">
    <div class="card-content">
      <div class="media-content">
        <div class="title"> Ask Your Question:</div>
        <br>
        <div class="card ask">
          <form id="questionForm">
            <div class="field">
              <div class="control">
                <div class="select ">
                  <select id='questionTag'>
                    <option>HTML</option>
                    <option>CSS</option>
                    <option>JavaScript</option>
                    <option>Node</option>
                    <option>Databases</option>
                  </select>
                </div>
              </div>
              <div class="control">
                {{!-- <textarea id="questionText" class="textarea is-primary" placeholder="I need help with ..."></textarea> --}}
                <textarea id="questionText"></textarea>
              </div>
              <br>
              <button type="submit" class="button ">Submit<i class="fa fa-paper-plane fa-fw"></i></button>
              <br>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="allQuestion">
    <div class="card-content">
      <div class="media-content">
        <div class="title">Recently Asked Questions</div>
        <br>
  
          {{#each questions}}
          
            {{> questions/question_block}}
          {{/each}}
        
      </div>
    </div>
  </div>
</div>

